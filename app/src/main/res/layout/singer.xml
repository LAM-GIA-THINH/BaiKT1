<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ImageView
        android:id="@+id/imageViewHinh"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:padding="10dp"
        />
    <TextView
        android:layout_marginTop="10dp"
        android:textStyle="bold"
        android:textSize="24sp"
        android:layout_toRightOf="@+id/imageViewHinh"
        android:id="@+id/textViewTen"
        android:text="Tên"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"

        />

    <TextView

        android:id="@+id/textViewMota"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textViewTen"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@id/imageViewHinh"
        android:text="Mô tả"
        android:textColor="@color/black"
        android:textSize="22sp"

        />

    <TextView
        android:id="@+id/textViewquocgia"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_marginLeft="0dp"
        android:layout_marginTop="95dp"
        android:layout_toRightOf="@id/imageViewHinh"
        android:text="Quốc gia"
        android:textColor="@color/black"
        android:textSize="22sp" />

    <TextView
        android:id="@+id/textViewsao"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="200dp"
        android:layout_marginTop="95dp"

        android:layout_toRightOf="@id/imageViewHinh"
        android:text="Số sao"
        android:textColor="@color/black"
        android:textSize="22sp" />

    <ImageView
        android:layout_width="40dp"
        android:layout_height="34dp"
        android:src="@drawable/star"
        android:layout_toRightOf="@id/textViewsao"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="92dp"/>

</RelativeLayout>